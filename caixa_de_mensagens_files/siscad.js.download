function validaRetorno(message){
    switch(message[0]){
        case 'warning':
            jQuery(".texto_alert").text(message[message.length-1]);
            jQuery("#alert").dialog('open');
            return true;
        case 'success':
            return true;
        case 'error':
            jQuery(".texto_alert").text(message[1]);
            jQuery("#alert").dialog('open');
            return false;
        default:
            jQuery(".texto_alert").text("Falha desconhecida.");
            jQuery("#alert").dialog('open');
            return false;
    }
}

