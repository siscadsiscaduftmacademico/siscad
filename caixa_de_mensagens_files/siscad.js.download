function showLoader(nomeGrid) {
    //var tbl0 = jQuery("#jGrid_" + nomeGrid + " #jTableBody").parent();
    var tbl = jQuery("#jGrid_" + nomeGrid + " #jTableBody").parent();

    if(tbl != null) {
        //alert(tbl.html());
